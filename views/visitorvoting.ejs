<%- include("partials/header") %>


<script type="text/javascript">
  function preback(){
    window.history.forward();
  }
  setTimeout("preback()", 0);
  window.onunload=function(){null};
</script>

<style>
    #back:hover {
        cursor: pointer;
    }
    .carousel-control-prev-icon, .carousel-control-next-icon {
    height: 100px;
    width: 100px;
    outline: black;
    background-color: rgba(0, 0, 0, 0.3);
    background-size: 100%, 100%;
    border-radius: 50%;
    border: 1px solid black;
   }
  </style>

  <div id="backicon">
    <i class="fa fa-arrow-left" id="back" aria-hidden="true" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/Visitorhome/<%=fest.festname%>'"></i>
  </div>
  <div style="margin: 2rem auto 2rem auto;"> 
  <%if(uservote.vote.length==0){%>  

  
    <div style="height: 10rem; margin:9rem 2rem 2rem 2rem; text-align:center;overflow: hidden;" id="carouselExampleCaptions" class="carousel slide" data-ride="false">
      <div class="carousel-inner" style=" border:3px solid #1A73E8; margin:0rem 2rem 0 29rem; width:18rem; text-align:center;">
       
        <div class="carousel-item active">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h3 class="card-title"> <%=doc.currentround[0].name%></h3>
              <form action="/Visitorhome/<%=fest.festname%>/<%=doc._id%>/0/vote" method="POST">
                <div>
                    <button class="btn btn-success">Vote</button>
                </div>
             </form>
            </div>
          </div>
        </div>

        <%for(var i=1;i<doc.currentround.length;i++){%>
          <div class="carousel-item">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
              
                <h3 class="card-title"> <%=doc.currentround[i].name%></h3>
                <form action="/Visitorhome/<%=fest.festname%>/<%=doc._id%>/<%=i%>/vote" method="POST">
                  <div>
                      <button class="btn btn-success">Vote</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
  
  <%}%>
  </div>
  
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a  class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true" style="color:black"></span>
    <span class="sr-only" style="color:black">Next</span>
  </a>
</div>
<%}else{%>
  <div style="margin:5rem auto 2rem auto; text-align: center;">
    <h2>Your vote has been recorded</h2>
  </div>
<%}%>  
  </div>
 <script>
     document.querySelector(".active").addEventListener("click",(e)=>{
         document.querySelector(".active").className = "disabled";   
     });
 </script>

 <%- include("partials/footer") %>        
    
