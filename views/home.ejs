<%if(user==null){%>
    <div style="margin:2rem auto 2rem auto">
        <a class="btn btn-primary" href="/login">Please Login</a>
    </div>
<%}else{%>

        <%var i%>
        <%var months = [
         'Jan', 'Feb', 'Mar', 'Apr', 'May',
         'Jun', 'Jul', 'Aug', 'Sep',
         'Oct', 'Nov', 'Dec'
         ];%>
       
             <table style="text-align:center; margin:2rem auto 2rem auto">
                <%for(i=0;i<A.length;i++){ %> 
                    <tr>
                      
                        <td>
                            <a href="/cordhome/<%=A[i][0]%>" >
                                <span class="festdetails">
                                    <%=A[i][0]%>
                                </span>
                            </a>
                        </td>
                        <td>
                            <span class="festdetails">
                                <%=A[i][1]%>
                            </span>
                        </td>
                        <td>
                            <span class="festdetails">
                                <%=A[i][2]%>
                            </span>
                        </td>
                        <td>
                            <span class="festdetails">
                                <% let suffix;
                                    switch((A[i][3].getDate())%10) {
                                        case 1: suffix = "st";
                                                break;
                                        case 2: suffix = "nd";
                                                break;
                                        case 3: suffix = "rd";
                                                break;
                                        default: suffix = "th";
                                    } %>
                                <%=A[i][3].getDate()%><%=suffix%> <%=months[A[i][3].getMonth()]%>, <%=A[i][3].getFullYear()%> to
                            </span>
                        </td>
                        <td>
                            <span class="festdetails">
                                <% suffix;
                                    switch((A[i][4].getDate())%10) {
                                        case 1: suffix = "st";
                                                break;
                                        case 2: suffix = "nd";
                                                break;
                                        case 3: suffix = "rd";
                                                break;
                                        default: suffix = "th";
                                    } %>
                                <%=A[i][4].getDate()%><%=suffix%> <%=months[A[i][4].getMonth()]%>, <%=A[i][4].getFullYear()%>
                            </span>
                        </td>
                    </tr>
                  <%}%>
             </table>
<%}%>
</div>
